<EventsHeader @viewName={{viewName}} @message={{message}}>
  <DButton
    @id="add-source"
    @action={{action "addSource"}}
    @label="admin.events.source.add.label"
    @title="admin.events.source.add.title"
    @icon="plus"
    @disabled={{addDisabled}}
  />
</EventsHeader>

<div class="admin-events-container">
  {{#if hasSources}}
    <table>
      <thead>
        <tr>
          <th>{{I18n "admin.events.source.name.label"}}</th>
          <th>{{I18n "admin.events.source.provider.label"}}</th>
          <th>{{I18n "admin.events.source.sync_type.label"}}</th>
          <th>{{I18n "admin.events.source.source_options.label"}}</th>
          <th>{{I18n "admin.events.filters.label"}}</th>
          <th class="action-column">{{I18n "admin.events.actions"}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each sources as |source|}}
          <EventsSourceRow
            @source={{source}}
            @providers={{providers}}
            @authTypes={{authTypes}}
            @removeSource={{action "removeSource"}}
            @setMessage={{action "setMessage"}}
          />
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>{{i18n "admin.events.source.none"}}</p>
  {{/if}}
</div>