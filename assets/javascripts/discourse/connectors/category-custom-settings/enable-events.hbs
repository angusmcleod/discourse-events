<h3>{{i18n "category.events_setting_heading"}}</h3>
<section class="field">
  <label class="checkbox-label">
    {{input type="checkbox" checked=this.category.custom_fields.events_enabled}}
    {{i18n "category.enable_events"}}
  </label>
</section>

<section class="field">
  <label class="checkbox-label">
    {{input
      type="checkbox"
      checked=this.category.custom_fields.events_agenda_enabled
    }}
    {{i18n "category.enable_events_agenda"}}
  </label>
</section>

<section class="field">
  <label class="checkbox-label">
    {{input
      type="checkbox"
      checked=this.category.custom_fields.events_calendar_enabled
    }}
    {{i18n "category.enable_events_calendar"}}
  </label>
</section>

<section class="field">
  <label class="checkbox-label">
    {{input
      type="checkbox"
      checked=this.category.custom_fields.events_event_label_no_text
    }}
    {{i18n "category.events_event_label_no_text"}}
  </label>
</section>

<section class="field">
  <label class="checkbox-label">
    {{input
      type="checkbox"
      checked=this.category.custom_fields.events_required
    }}
    {{i18n "category.require_event"}}
  </label>
</section>

<section class="field min-trust">
  <label>{{i18n "category.events_min_trust_to_create"}}</label>
  {{input
    type="number"
    value=this.category.custom_fields.events_min_trust_to_create
  }}
</section>